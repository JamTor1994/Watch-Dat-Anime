<div class="jumbotron" style="background: orange; margin: 120px">
  <h1 class="display-4">Anime/Manga Tracker</h1>
  <div class="jumbotron">
    <h2>Want To Watch/ Read</h2>

    <ul class="list-group">
      {{#each anime}}
      {{#unless watched}}
      {{> animes/anime-block watched=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="jumbotron">
    <h2>Finished Anime/ Manga</h2>

    <ul class="list-group">
      {{#each anime}}
      {{#if watched}}
      {{> animes/anime-block watched=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>

  <div class="jumbotron">
    <h2>Add a Anime or Manga</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="watch">Anime/Manga Name:</label>
        <input type="text" id="watch" name="name">
      </div>

      <div class="form-group">
        <label for="watch"></label><br>
        <input type="radio" name="watched" value="1" checked> Watching/ Reading<br>
        <input type="radio" name="watched" value="0"> Want To Watch/ Read
      </div>

      <button type="submit">Add Manga/ Anime</button>
    </form>
  </div>
</div>